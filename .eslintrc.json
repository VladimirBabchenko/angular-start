{
    "env": {
        "es6": true
    },
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": [
        "import/errors",
        "import/warnings"
    ],
    
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "/webpack.config.js"
            }
        }
    },
    "rules": {
        "import/extensions": [
            "error",
            "always",
            {
                "js": "never"
            }
        ]
    }
}